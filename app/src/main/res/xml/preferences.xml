<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:key="contacts_sort_by"
        android:title="Sort by"
        android:dialogTitle="Sort by"
        android:entries="@array/sort_by_items"
        android:entryValues="@array/sort_by_values"
        android:defaultValue="1"
        android:summary="%s"/>

    <ListPreference
        android:key="contacts_sort_order"
        android:title="Sort order"
        android:dialogTitle="Sort order"
        android:entries="@array/sort_order_items"
        android:entryValues="@array/sort_by_values"
        android:defaultValue="1"
        android:summary="%s"/>
</PreferenceScreen>